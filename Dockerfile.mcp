FROM python:3.11-slim

# 1) Install curl (and libpq for psycopg2)  
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      curl \
      libpq-dev \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 2) Copy & install only pip requirements  
COPY mcp_requirements.txt .  
RUN pip install --no-cache-dir --upgrade pip -r mcp_requirements.txt

# 3) Copy the rest of your code  
COPY . .

# 4) Expose and launch  
EXPOSE 8000  
CMD ["uvicorn", "src.pg_mcp:app", "--host", "0.0.0.0", "--port", "8000"]
