{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "default": { "format": "%(asctime)s %(levelname)s %(name)s - %(message)s" }
  },
  "handlers": {
    "rotating_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "filename": "/app/logs/server.log",
      "maxBytes": 10000000,
      "backupCount": 5,
      "encoding": "utf-8",
      "formatter": "default"
    },
    "console": { "class": "logging.StreamHandler", "formatter": "default" }
  },
  "root": { "level": "INFO", "handlers": ["console", "rotating_file"] },
  "loggers": {
    "uvicorn":      { "level": "INFO",  "handlers": ["console", "rotating_file"], "propagate": false },
    "uvicorn.error":{ "level": "INFO",  "handlers": ["console", "rotating_file"], "propagate": false },
    "uvicorn.access":{ "level": "INFO", "handlers": ["console", "rotating_file"], "propagate": false }
  }
}
